<h2>Perbarui kata sandi Anda</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "Kata sandi baru" %><br />
    <% if @minimum_password_length %>
      <em>(Panjang password minimal <%= @minimum_password_length %> karakter)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Konfirmasi kata sandi" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Perbarui kata sandi saya" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
