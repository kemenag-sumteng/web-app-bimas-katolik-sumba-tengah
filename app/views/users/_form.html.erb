<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nama_lengkap %>
    <%= form.text_field :nama_lengkap %>
  </div>

  <div class="field">
    <%= form.label :peran_id %>
    <%= collection_select(:user, :peran_id, Peran.all, :id, :name, {prompt: true}) %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password, placeholder: "Biarkan kosong jika tidak ingin mengubahnya" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
